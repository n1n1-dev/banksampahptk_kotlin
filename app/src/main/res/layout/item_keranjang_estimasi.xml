<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingLeft="6dp"
    android:paddingBottom="14dp">

    <LinearLayout
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/hapusKEBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_delete"
            android:elevation="10dp"
            app:tint="@color/red"
            android:background="@null"/>

        <View
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNamaKE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Item"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNamaBSKE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Bank Sampah"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textViewSatuanKE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Item"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textViewHargaKE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Harga: Rp 0"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/subtotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="0"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="15dp">

        <ImageButton
            android:id="@+id/decreaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:elevation="10dp"
            app:tint="@color/red"
            android:background="@null"/>

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/jumlahTextViewL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="65dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/jumlahTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/increaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle"
            android:elevation="10dp"
            app:tint="@color/teal"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>




